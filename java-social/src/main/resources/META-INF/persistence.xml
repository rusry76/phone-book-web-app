<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="addressbook" transaction-type="JTA">
        <jta-data-source>jdbc/PersonsDS</jta-data-source>
        <class>ru.social.server.model.Contact</class>
        <class>ru.social.server.model.Group</class>

        <properties>
            <property name="URL" value="jdbc:mysql://localhost:3306/phonebook" />
        </properties>
    </persistence-unit>
</persistence>
